<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="9"
        android:gravity="center|left">

        <TextView
            android:id="@+id/tv_vibor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse jobs that match your expence to a client's\nhiring preferences. Ordered by most relevant."
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_green_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We need somewone who have GP\nconsole account"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="#0F9114"/>
                <TextView
                    android:id="@+id/tv_grey_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="55dp"
                    android:text="Fixed-price - Posted 7 hr.ago"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="40dp"
                        android:background="@drawable/oval"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/baseline_thumb_down_off_alt_24"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_favorite"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/oval"
                        android:src="@drawable/baseline_favorite_border_24"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_money1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv_grey_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Budget"
                        android:textColor="#8A8A8A"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_black_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Entry level"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_grey_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Budget"
                        android:textColor="#8A8A8A"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/tv_hello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, Need an  Publisher for publishing my android App\non Google Play. I have Ready-made..."
                        android:layout_marginRight="3dp"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_green_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="183dp"
                        android:text="more"
                        android:textColor="#12A118"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="7">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            android:gravity="center|left"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_text_in_oval1"
                                android:layout_width="90dp"
                                android:layout_height="25dp"
                                android:background="@drawable/liniya"
                                android:text="Smartphon"
                                android:gravity="center"
                                android:layout_marginRight="5dp"
                                android:textColor="#606060"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_text_in_oval2"
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:text="Table"
                                android:gravity="center"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/liniya"
                                android:textColor="#FF606060"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_text_in_oval3"
                                android:layout_width="180dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="Native App Development"
                                android:background="@drawable/liniya"
                                android:textColor="#FF606060"
                                android:textSize="15sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="5">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_arrow_forward_ios_24"/>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical"

                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="7">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/img_4"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment verified"
                                android:layout_marginRight="5dp"
                                android:textColor="#939393"
                                android:textSize="15sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$30"
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000000"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_money2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="spend"
                                android:textColor="#939393"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>